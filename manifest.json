{
    "name": "NBA Timezone Changer",
    "description": "Automatically changes the NBA Games times from official website to the current browser timezone",
    "version": "1.5",
    "manifest_version": 3,
    "action": {
        "default_popup": "nba.html",
        "default_icon": "nba.png"
    },
    "content_scripts": [
        {
            "js": [
                "nba.js"
            ],
            "matches": [
                "https://www.nba.com/games*",
                "https://www.nba.com/games"
            ]
        }
    ]
}